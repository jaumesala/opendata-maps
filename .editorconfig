# editorconfig.org
# plugin for sublimetext: editorconfig-sublime (from Package Control)

# top-most EditorConfig file
root = true

# all files
[*]
    charset = utf-8
    indent_style = space
    indent_size = 4
    trim_trailing_whitespace = true
    end_of_line = lf
    insert_final_newline = true

# markup files
[*.md]
    trim_trailing_whitespace = false
